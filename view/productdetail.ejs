        </div>
      
    </section>

    <section class="productlist_wrap" id="productlist_wrap">
        <h2><관련 상품></h2><br><br>
        <% for (var i=0; i<product.length; i++){ %>
          <% if(productlist.p_id!=i&&productlist.category==product[i].category){ %>
            <div class="box">
              <div class="product_image">
                  <img src= <%=product[i].image %>>
              </div>
              <div class="product_title">
                  <a href="/productdetail/<%=product[i].p_id%>">
                      <p><%= product[i].p_name%></p>
                  </a>
              </div>
              <div class="seller-info">
                  <span class="seller-name">
                      <p><%=product[i].seller%></p>
                  </span>
                  <span class="seller-score">
                      <p><%=product[i].seller_score%></p>
                  </span>
              </div>
                  <p class="product_price"><%=product[i].p_price%></p>
                  <p class="product_hashtag"><%=product[i].hashtag%></p>

          </div>
          <% } %>
         
      <% }%>    

    </section>
