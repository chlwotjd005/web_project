          </div>
          <div class="product_title">
              <a href="/productdetail/<%=product[i].p_id%>">
                  <p><%= product[i].p_name%></p>
              </a>
          </div>
          <div class="seller-info">
              <span class="seller-name">
                  <p><%=product[i].seller%></p>
              </span>
              <span class="seller-score">
                  <p><%=product[i].seller_score%></p>
              </span>
          </div>
